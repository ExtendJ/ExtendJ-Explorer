<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="drast.views.gui.controllers.Controller" fx:id="root">
    <top>
        <HBox styleClass="topParent">
            <fx:include fx:id="topMenu" source="/topMenu.fxml"/>
        </HBox>
    </top>
    <center>
        <SplitPane styleClass="boobs" fx:id="centerSplitPane" orientation="HORIZONTAL" dividerPositions="0.2,0.8">
            <!-- Left window -->
            <VBox styleClass="paneParent">
                <VBox styleClass="topRigthAlign">
                    <Button styleClass="minimizeButton" text="-" fx:id="minimizeLeftSide">
                        <tooltip>
                            <Tooltip text="Minimize"/>
                        </tooltip>
                    </Button>
                </VBox>
                <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab text="Node data">
                            <fx:include fx:id="attributeTab" source="/attributeTab.fxml"/>
                        </Tab>
                        <Tab text="Class overview"  fx:id="classOverviewTabNode">
                            <fx:include fx:id="classOverview" source="/classOverviewTab.fxml" />
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>
            <!-- Middle window -->
            <VBox >
                <SplitPane orientation="VERTICAL" dividerPositions="0.8" fx:id="consoleAndGraphSplitPane">
                    <VBox>
                        <TabPane tabClosingPolicy="UNAVAILABLE" fx:id="astViewTabs">
                            <tabs>
                                <Tab text="Graph" fx:id="graphViewTabNode">
                                    <fx:include fx:id="graphViewTab" source="/graphViewTab.fxml"/>
                                </Tab>
                                <Tab text="Tree" fx:id="treeViewTabNode">
                                    <fx:include fx:id="textTreeTab" source="/treeViewTab.fxml"/>
                                </Tab>
                            </tabs>
                        </TabPane>

                        <HBox styleClass="graphInfo">
                            <Label text="|" styleClass="dividerLabel"></Label>
                            <Label text="Filters: " fx:id="appliedFiltersLabelLabel" styleClass="our_label"></Label>
                            <Label text="" fx:id="appliedFiltersLabel"></Label>
                            <Label text="|"></Label>
                            <Label text="Node Count: " styleClass="our_label"></Label>
                            <Label text="" fx:id="nodeCountLabel"></Label>
                            <Label text="|"></Label>
                        </HBox>
                    </VBox>
                    <VBox>
                        <VBox styleClass="paneParent">
                            <VBox styleClass="topRigthAlign">
                                <Button styleClass="minimizeButton" text="-" fx:id="minimizeConsole">
                                    <tooltip>
                                        <Tooltip text="Minimize"/>
                                    </tooltip>
                                </Button>
                            </VBox>
                        </VBox>

                        <fx:include fx:id="console" source="/console.fxml"/>
                    </VBox>


                </SplitPane>
            </VBox>
            <!-- right window -->
            <VBox styleClass="paneParent">
                    <VBox styleClass="topLeftAlign">
                        <Button styleClass="minimizeButton" text="-" fx:id="minimizeRightSide">
                            <tooltip>
                                <Tooltip text="Minimize"/>
                            </tooltip>
                        </Button>
                    </VBox>
                <SplitPane orientation="VERTICAL" dividerPositions="0.5">
                    <TabPane tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <fx:include fx:id="filterTab" source="/filterTab.fxml"/>
                        </tabs>
                    </TabPane>
                </SplitPane>
            </VBox>
        </SplitPane>
    </center>
    <bottom>
        <HBox styleClass="paneParent, bottombar">
            <Label text="Joel Lindholm | Johan Thorsberg 2015-2016"/>
        </HBox>
    </bottom>
    <stylesheets>style/style.css</stylesheets>
    <stylesheets>style/invokeAttributeDialog.css</stylesheets>
    <stylesheets>style/topmenu.css</stylesheets>
    <stylesheets>style/attributeView.css</stylesheets>
    <stylesheets>style/configLanguageStyle.css</stylesheets>
    <stylesheets>style/console.css</stylesheets>
</BorderPane>