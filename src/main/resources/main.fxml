<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="uicomponent.controllers.Controller">
    <top>
        <HBox styleClass="topParent">
            <Label text=" "/>
        </HBox>
    </top>
    <center>
        <SplitPane fx:id="centerSplitPane" orientation="HORIZONTAL" dividerPositions="0,1">
            <TabPane tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="Attributes">
                        <fx:include fx:id="attributeTab" source="/attributeTab.fxml"/>
                    </Tab>
                </tabs>
            </TabPane>
            <VBox styleClass="paneParent" VBox.vgrow="ALWAYS">
                <TabPane tabClosingPolicy="UNAVAILABLE" fx:id="graphViewTabs">
                    <tabs>
                        <Tab text="Graph" fx:id="graphViewTabNode">
                            <ScrollPane styleClass="graphView" fx:id="graphView"/>
                        </Tab>
                        <Tab text="Tree" fx:id="treeViewTabNode">
                            <fx:include fx:id="textTreeTab" source="/textTreeTab.fxml"/>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>
            <VBox styleClass="paneParent">
                <SplitPane orientation="VERTICAL" dividerPositions="0.5">
                    <TabPane tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <Tab text="Filter">
                                <VBox styleClass="paneParent">
                                    <TextArea styleClass="textAreaConfig" fx:id="filteredConfigTextArea"/>
                                    <Button text="Update" fx:id="saveNewFilterButton"></Button>
                                </VBox>
                            </Tab>
                            <Tab text="Classes">
                                <VBox styleClass="paneParent" VBox.vgrow="ALWAYS">
                                    <ScrollPane styleClass="typeListView" fx:id="scrollPaneClassFilter"
                                                prefHeight="1000">
                                        <TreeView styleClass="typeTreeView" fx:id="typeListView"/>
                                    </ScrollPane>
                                </VBox>
                            </Tab>
                        </tabs>
                    </TabPane>
                    <TabPane tabClosingPolicy="UNAVAILABLE">
                        <tabs>
                            <Tab text="empty">
                                <VBox styleClass="paneParent"></VBox>
                            </Tab>
                            <Tab text="empty">
                                <VBox styleClass="paneParent"></VBox>
                            </Tab>
                        </tabs>
                    </TabPane>
                </SplitPane>
            </VBox>
        </SplitPane>
    </center>
    <stylesheets>style.css</stylesheets>
</BorderPane>