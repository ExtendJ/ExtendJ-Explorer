<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox VBox.vgrow="ALWAYS" styleClass="paneParent" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uicomponent.controllers.AttributeTabController">
   <children>
       <SplitPane fx:id="attributeSplitPane" orientation="VERTICAL" dividerPositions="0.7">
           <VBox VBox.vgrow="ALWAYS" styleClass="paneParent">
               <Label fx:id="nodeNameLabel" minHeight="30" text="" />
               <TableView fx:id="attributeTableView" prefHeight="1000">
                   <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                   <columns>
                       <TableColumn fx:id="attributeNameCol" text="Name"/>
                       <TableColumn fx:id="attributeValueCol"  text="Value" />
                   </columns>
               </TableView>
           </VBox>
           <VBox VBox.vgrow="ALWAYS" styleClass="paneParent">
               <Label fx:id="attributeInfoLabel" minHeight="30" text="" />
               <TableView fx:id="attributeInfoTableView" styleClass="info-table-view" prefHeight="1000">
                   <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                   <columns>
                       <TableColumn fx:id="attributeInfoNameCol" text="Name"/>
                       <TableColumn fx:id="attributeInfoValueCol"  text="Value"  />
                   </columns>
               </TableView>
           </VBox>
       </SplitPane>
   </children>
</VBox>
